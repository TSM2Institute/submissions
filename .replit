entrypoint = "index.html"
modules = ["web", "python-3.11"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "/"
deploymentTarget = "autoscale"
run = ["python", "server.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Website"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[ports]]
localPort = 80
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
